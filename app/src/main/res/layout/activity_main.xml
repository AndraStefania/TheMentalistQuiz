<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smileyface5"
    tools:context="com.example.android.thementalistquiz.MainActivity"
    tools:ignore="contentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:text="@string/title"
            android:textColor="@color/NavajoWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/entername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:hint="@string/entername"
            android:inputType="textCapWords"
            android:textColor="@color/NavajoWhite"
            android:textColorHint="@color/NavajoWhite" />

        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/question1"
            android:textColor="@color/NavajoWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:hint="@string/answer1"
            android:inputType="textCapWords"
            android:textColor="@color/NavajoWhite"
            android:textColorHint="@color/NavajoWhite" />

        <TextView
            android:id="@+id/question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/question2"
            android:textColor="@color/NavajoWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/firstanswer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:buttonTint="@color/DarkRed"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/firstanswer2"
                android:textColor="@color/NavajoWhite"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/secondanswer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:buttonTint="@color/DarkRed"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/secondanswer2"
                android:textColor="@color/NavajoWhite"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/thirdanswer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:buttonTint="@color/DarkRed"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/thirdanswer2"
                android:textColor="@color/NavajoWhite"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/fourthanswer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
