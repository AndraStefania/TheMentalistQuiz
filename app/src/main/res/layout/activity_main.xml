            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/question3"
            android:textColor="@color/NavajoWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radiogroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/firstanswer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:buttonTint="@color/DarkRed"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/firstanswer3"
                android:textColor="@color/NavajoWhite"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/secondanswer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:buttonTint="@color/DarkRed"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/secondanswer3"
                android:textColor="@color/NavajoWhite"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/thirdanswer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:buttonTint="@color/DarkRed"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/thirdanswer3"
                android:textColor="@color/NavajoWhite"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/fourthanswer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:buttonTint="@color/DarkRed"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/fourthanswer3"
                android:textColor="@color/NavajoWhite"
                android:textSize="18sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/question4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/question4"
